{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": true, 
        "strict": true,
        "noImplicitThis": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true, 
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "Config/*": ["src/frontend/config/*"],
            "Containers/*": ["src/frontend/containers/*"],
            "Logic/*": ["src/frontend/logic/*"],
            "Presentational/*": ["src/frontend/presentational/*"]
        },
        "experimentalDecorators": true,
        "types": [
            "webpack-env",
            "node",
            "material-ui"
        ]
    }
}